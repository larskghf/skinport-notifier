#!/bin/sh

# Pr√ºfe auf Conventional Commits Format
commit_msg=$(cat "$1")
pattern="^(feat|fix|docs|style|refactor|test|chore)(\([a-z]+\))?: .+"

if ! echo "$commit_msg" | grep -qE "$pattern"; then
    echo "‚ùå Error: Commit message must follow Conventional Commits format:"
    echo "type(scope): description"
    echo ""
    echo "‚úÖ Valid types: feat, fix, docs, style, refactor, test, chore"
    echo ""
    echo "üìù Examples:"
    echo "feat: add new feature"
    echo "fix(api): handle timeout errors"
    echo "docs: update README"
    exit 1
fi 